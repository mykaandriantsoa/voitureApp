{% extends 'base.html.twig' %}

{% block title %}Hello VoitureController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    
    <h2>Nom de la voiture : <a href="#">{{voiture.nom}}</a></h2>
    {% if service_controller.getSessionUser() %}
        <ul>
            {% for commentaire in voiture.commentaires %}
                <li><a href="#">{{commentaire.user.login}}</a> => {{commentaire.contenu}}</li>
            {% endfor %}
        </ul>
        {{ form_start(form) }}
            {{ form_widget(form) }}<input type="submit" value="Commenter">
            
        {{ form_end(form) }}
    {% else %}
        <a href="{{path('login')}}">Connectez vous pour pouvoir acc√©der aux commentaires</a>
    {% endif %}
    
    
</div>
{% endblock %}
